# Environment Variables for Elite Render Engine Backend

# MongoDB
MONGO_URI=mongodb+srv://<username>:<password>@<cluster>/<db>?retryWrites=true&w=majority

# JWT
JWT_SECRET=replace_me_super_secret
JWT_REFRESH_SECRET=replace_me_super_refresh_secret
JWT_ACCESS_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Stripe Keys (Get from https://dashboard.stripe.com/test/apikeys)
STRIPE_SECRET_KEY=sk_test_your_secret_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# Client URL (Frontend URL)
CLIENT_URL=http://localhost:8080

# Server Port
PORT=3001

# Airtable Configuration
# Get your Personal Access Token (PAT) from: https://airtable.com/create/tokens
# The PAT needs access to the base and table you want to use
AIRTABLE_BASE=appjg75kO367PZuBV
AIRTABLE_TABLE=Table 1
AIRTABLE_VIEW=Grid view
AIRTABLE_TOKEN=your_personal_access_token_here
